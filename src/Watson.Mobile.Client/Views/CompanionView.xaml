<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Watson.Mobile.Client.Views"
             x:Class="Watson.Mobile.Client.Views.CompanionView">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image Source="Illustrations/control_remote.png" WidthRequest="175" HeightRequest="175" Margin="0,100,0,0" />
            
            <Label Text="Companion Remote" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold" />

            <StackLayout>
                <Label
                    Text="Voeg een Mixed Reality apparaat toe om deze met je telefoon te besturen" 
                    HorizontalTextAlignment="Center"
                    FontSize="Small" 
                    FontAttributes="Bold" />
            </StackLayout>

            <Button 
                Text="Apparaat toevoegen" 
                CornerRadius="999" 
                HorizontalOptions="Center"
                ImageSource="{StaticResource PlusIconImageSource}"
                ContentLayout="Left, 10" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>