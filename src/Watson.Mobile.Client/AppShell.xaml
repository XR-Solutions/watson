<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Watson.Mobile.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Watson.Mobile.Client"
    xmlns:views="clr-namespace:Watson.Mobile.Client.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Watson Companion App">

    <ShellContent
        ContentTemplate="{DataTemplate views:MainView}"
        Route="Main" />


    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate views:MainView}" />
        </Tab>
    </TabBar>

</Shell>
